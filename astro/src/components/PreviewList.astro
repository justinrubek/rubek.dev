---
import PagePreview from '../components/PagePreview.astro'
const { 
    items,
} = Astro.props
// TODO: predicate input?
// TODO: custom render component?

console.log("PreviewList:", items)
const sorted_items = items.sort((a, b) => new Date(b.url) - new Date(a.url)).reverse();
---
<section class="post-preview__list">
    {sorted_items.map((item) => (
        <PagePreview item={item} />
    ))}
</section>
<style>
    .post-preview__list {
        @apply flex flex-col gap-12
    }
</style>
